{
  "manifest_version": 2,

  "name": "OpenXposure Screenshot",
  "description": "",
  "version": "1.0",
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": { // optional
      "19": "images/icon19.png", // optional
      "38": "images/icon38.png" // optional
    },
    "default_title": "OpenXposure"//, // optional; shown in tooltip
    //"default_popup": "popup.html" // optional
  },
  "content_scripts": [
    {
      "matches": ["http://demos.telerik.com/*"],
      "css": ["styles.css"],
      "js": ["libs/jquery-2.1.3.min.js"]
    }
  ],
  "permissions": [
    "declarativeContent",
    "activeTab",
    "http://*/"
  ]
}